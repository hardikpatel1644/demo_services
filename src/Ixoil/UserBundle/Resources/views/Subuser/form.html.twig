{% extends '::restricted.html.twig' %}

{% trans_default_domain "subuser" %}

{% block body_content %}
{% if email_available is defined and email_available == false  %}
<div class="row alert alert-danger">
    {{ 'subuser.email_exist'|trans({},'subuser')}}
</div>
{% endif %}

<div class="padder-v">
    <section class="panel panel-default">
        <div class="panel-body" >
            {{ form_start(form, { 'style': 'horizontal' }) }}
                {{ bootstrap_set_widget_col(6) }}
                {{ form(form) }}
            {{ form_end(form) }}
        </div>
    </section>
</div>
{% endblock %}
