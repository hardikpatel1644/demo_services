
{% trans_default_domain "email" %}
{# body block start #}    
{% block body %}
<body>
    <div style="background-color:#f2f2f2;font-family:Arial,Helvetica,sans-serif;font-size:14px;color:#717171">
        <center>
            <table width="600" cellspacing="0" cellpadding="0" border="0" bgcolor="#FFFFFF" align="center" style="border-collapse:collapse;padding:0;margin:0px auto">
                <tbody>
                {# Header block start #}
				{% block header %}
                        {% include 'IxoilEmailBundle:includes:mail.header.html.twig'  %}
                {% endblock %}
                {# Header block end #}    

				{% block title %}
                        {% include 'IxoilEmailBundle:includes:mail.title.html.twig'  %}
                {% endblock %}                        
                    <tr>
                        <td bgcolor="#FFFFFF" colspan="2">
                            <table width="600" cellspacing="0" cellpadding="0" border="0" align="left">
                                <tbody><tr>
                                        <td colspan="3"><img width="10" border="0" height="10" src="{{ asset('bundles/ixoilemail/images/spacer10.png') }}"></td>
                                    </tr>
                                    <tr>
                                        <td width="20"><img width="20" border="0" height="20" src="{{ asset('bundles/ixoilemail/images/spacer20.png') }}"></td>
                                        <td width="560" style="text-align:left">
                                            <p align="left"></p><h4 style="font-weight:bold;color:#000000; margin-top:0px;">Bonjour {{ mail_content.name }},</h4><p></p>       
                                            
                                            {% block content %}

                                            {% endblock %} 
                                            
                                            <p align="left" style="color:#625454; margin-bottom:10px;">{{ 'email.title.thanksMsg'|trans({}, 'email') }}</p>
                                        </td>
                                        <td width="20"><img width="20" border="0" height="20" src="{{ asset('bundles/ixoilemail/images/spacer20.png') }}"></td>
                                    </tr>
                                </tbody></table>   
                        </td>
                    </tr>

                {# Footer block start #}    
                {% block footer %}                       
                    {% include 'IxoilEmailBundle:includes:mail.footer.html.twig'%}
				{% endblock %}      
                {# Footer block end #}   

                </tbody>
            </table>
        </center>
    </div>
</body>
{% endblock %}
{# body block end #} 